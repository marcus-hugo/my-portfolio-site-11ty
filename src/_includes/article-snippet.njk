<li>
    <article class="post flex-col snippet">
        <img src="{{ post.data.image }}" width="150" height="150" alt="{{ post.data.imageAlt }}"></img>
        <h3 class="post__title"><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
        <p class="post__date">{{ post.data.date | postDate }}</p>
        <h4 class="post__author">by {{ post.data.author }}</h4>
        <p class="post__description">{{ post.data.description }}</p>
        <a href="{{ post.url }}">Continue Reading</a>
    </article>
</li>
