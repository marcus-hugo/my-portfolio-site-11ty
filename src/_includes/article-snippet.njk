<li class="li-post">
    <article class="post flex-col snippet">
        <img src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}"></img>
        <h3><a href="{{ post.url }}">{{ post.data.title }}</a></h3>
        <p>{{ post.data.date | postDate }}</p>
        <h4>by {{ post.data.author }}</h4>
        <p>{{ post.data.description }}</p>
        <a href="{{ post.url }}">Continue Reading</a>
    </article>
</li>
